rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Billing records - users can only access their own records
    match /billing_records/{recordId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Analysis results - users can only access their own analyses
    match /analysis_results/{analysisId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // User profiles - users can only access their own profile
    match /user_profiles/{profileId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == profileId;
    }
    
    // Public configuration (read-only for all authenticated users)
    match /config/{configId} {
      allow read: if request.auth != null;
    }
  }
}
